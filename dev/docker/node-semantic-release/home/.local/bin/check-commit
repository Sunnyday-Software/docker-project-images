#!/bin/bash

BASE_DIR="/workdir/conventions/commits"


# Get the config file to use
CONFIG_FILE="${HOME}/commitlint.config.mjs"

# Funzione per determinare il tipo di input e gestirlo di conseguenza
handle_commitlint_input() {
    local input="$1"

    # Se non c'√® input, leggi da stdin
    if [ -z "$input" ]; then
        echo "üîç Leggendo messaggio di commit da stdin..."
        #commitlint --config "$CONFIG_FILE"
        npm run --prefix $HOME commitlint:stdin -- --config "$CONFIG_FILE"

        return $?
    fi

    # Controlla se l'input √® un file esistente
    if [ -f "$input" ]; then
        echo "üîç Leggendo messaggio di commit dal file: $input"

        #commitlint --config "$CONFIG_FILE" --edit "$input"
        npm run --prefix $HOME commitlint:edit -- --config "$CONFIG_FILE" --edit "$input"
        return $?
    fi

    # Controlla se l'input sembra un percorso file (contiene / o ha estensione)
    if [[ "$input" == *"/"* ]] || [[ "$input" == *"."* ]]; then
        echo "‚ö†Ô∏è  Attenzione: '$input' sembra un percorso file ma il file non esiste"
        echo "üîç Trattando come messaggio di commit testuale..."
    fi

    # Altrimenti, tratta come messaggio di commit testuale
    echo "üîç Validando messaggio di commit: \"$input\""
    #echo "$input" | commitlint --config "$CONFIG_FILE"
    echo "$input" | npm run --prefix "$HOME" commitlint:stdin -- --config "$CONFIG_FILE"
    return $?
}


# Gestione dei casi principali
if [ $# -eq 0 ]; then
    # Nessun argomento: leggi da stdin
    handle_commitlint_input ""
elif [ $# -eq 1 ]; then
    # Un solo argomento: pu√≤ essere file o messaggio
    handle_commitlint_input "$1"
else
    # Pi√π argomenti: concatena tutti come un singolo messaggio
    message="$*"
    echo "üîç Validando messaggio di commit multi-argomento: \"$message\""
    #echo "$message" | commitlint --config "$CONFIG_FILE"
    echo "$message" | npm run --prefix $HOME commitlint:stdin -- --config "$CONFIG_FILE"
fi

exit_code=$?

# Se c'√® stato un errore, mostra l'aiuto
if [ $exit_code -ne 0 ]; then
    echo ""
    echo ""
    echo ""
    npm run  --prefix "$HOME" commit-help
fi


exit $exit_code
